<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/outbound_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/outbound_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/outbound_image" />

        <TextView
            android:id="@+id/outbound_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/outbound_time"
            app:layout_constraintStart_toStartOf="@id/outbound_time" />

        <TextView
            android:id="@+id/outbound_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/outbound_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/outbound_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/outbound_connection"
            app:layout_constraintEnd_toEndOf="@id/outbound_connection" />

        <ImageView
            android:id="@+id/inbound_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/inbound_image"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/inbound_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/inbound_image"
            app:layout_constraintStart_toEndOf="@id/inbound_image" />

        <TextView
            android:id="@+id/inbound_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inbound_time"
            app:layout_constraintStart_toStartOf="@id/inbound_time" />

        <TextView
            android:id="@+id/inbound_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/inbound_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/inbound_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inbound_connection"
            app:layout_constraintEnd_toEndOf="@id/inbound_connection" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inbound_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>