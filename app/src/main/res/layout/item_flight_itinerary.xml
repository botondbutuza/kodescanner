<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/outbound_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/outbound_time"
            app:layout_constraintBottom_toBottomOf="@+id/outbound_location"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/outbound_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/outbound_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/outbound_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            app:layout_constraintTop_toBottomOf="@id/outbound_time"
            app:layout_constraintStart_toStartOf="@id/outbound_time" />

        <TextView
            android:id="@+id/outbound_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/outbound_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/outbound_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            app:layout_constraintTop_toBottomOf="@id/outbound_connection"
            app:layout_constraintEnd_toEndOf="@id/outbound_connection" />

        <ImageView
            android:id="@+id/inbound_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/inbound_time"
            app:layout_constraintBottom_toBottomOf="@+id/inbound_location"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/inbound_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/outbound_location"
            app:layout_constraintStart_toEndOf="@id/inbound_image" />

        <TextView
            android:id="@+id/inbound_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            app:layout_constraintTop_toBottomOf="@id/inbound_time"
            app:layout_constraintStart_toStartOf="@id/inbound_time" />

        <TextView
            android:id="@+id/inbound_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/inbound_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/inbound_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            app:layout_constraintTop_toBottomOf="@id/inbound_connection"
            app:layout_constraintEnd_toEndOf="@id/inbound_connection" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/grey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inbound_location" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text here"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>